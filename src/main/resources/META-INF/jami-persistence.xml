<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
				http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" >

    <persistence-unit name="intact-jami" >
      <properties>
         <property name="hibernate.max_fetch_depth" value="4"/>
         <!--<property name="hibernate.ejb.interceptor.session_scoped" value="uk.ac.ebi.intact.jami.interceptor.IntactSynchronizerInterceptor"/>-->
          <property name="hibernate.connection.release_mode" value="after_transaction"/>
          <!--<property name="hibernate.id.new_generator_mappings" value="false"/>-->
          <!--this is not needed-->
          <property name="javax.persistence.validation.group.pre-update" value="javax.validation.groups.Default"/>
          <!-- <property name="javax.persistence.validation.group.pre-persist" value="uk.ac.ebi.intact.jami.constraints.groups.ComplexGroup"/>-->
          <!--this is not needed-->
          <property name="eventListeners" value="org.hibernate.cfg.beanvalidation.BeanValidationEventListener"/>
          <!--this is needed-->
<property name="javax.persistence.validation.mode" value="CALLBACK"/>

      </properties>

   </persistence-unit>

</persistence>